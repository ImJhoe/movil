{
    "name": "webservice/citas-medicas",
    "type": "project",
    "description": "API REST para gestión de citas médicas con Slim Framework",
    "keywords": ["slim", "api", "rest", "citas", "medicas"],
    "license": "MIT",
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "slim/slim": "^4.14",
        "slim/psr7": "^1.7",
        "php-di/php-di": "^6.4",
        "monolog/monolog": "^2.10",
        "firebase/php-jwt": "^6.11",
        "respect/validation": "^2.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "phpstan/phpstan": "^1.12",
        "squizlabs/php_codesniffer": "^3.13"
    },
    "autoload": {
        "psr-4": {
            "App\\": "api/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs",
        "fix-style": "phpcbf",
        "analyze": "phpstan analyse",
        "start": "php -S localhost:8081 -t public"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}